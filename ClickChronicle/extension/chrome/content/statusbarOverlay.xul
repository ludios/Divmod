<?xml version="1.0"?>

<overlay id="clickchronicle_statusbarOverlay" 
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <?xml-stylesheet type="text/css" href="chrome://clickchronicle/content/clickchronicle.css"?>
